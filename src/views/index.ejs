<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BLUE SN</title>
    <script src="socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="/layout.css">
    <meta http-equiv="Content-Security-Policy" content="script-src 'self' 'wasm-unsafe-eval' 'inline-speculation-rules' 'unsafe-inline' https://blue-sn.onrender.com 'unsafe-eval'">

</head>

<body>
    <script src="https://blue-sn.onrender.com/src/mixpanel.min.js" type="text/javascript"></script>

    <div id="wrapper">
        <div id="login">
                <div id="login-left">
                    <h3>Login:</h3>
                    <input type="text" id="txtUsername" placeholder="Username">
                    <input type="text" id="txtPassword" placeholder="Password">
                    <input type="button" value="Submit" id="btnLogin">
                </div>
                
                <div id="login-right">
                    <h3>Register:</h3>
                    <input type="text" id="txtName" placeholder="Username">
                    <input type="text" id="txtPass" placeholder="Password">
                    <input type="text" id="txtVerifyPass" placeholder="Verify password">
                    <input type="button" value="Register" id="btnRegister">
                </div>
        </div>

        <div id="chat">
            <div id="video">
                <h3 id="peerId">My peer id:</h3>
                <video id="localVideo" controls></video>
                <video id="friendVideo" controls></video>

            </div>
            
            <div id="left">
                <div id="boxTitle">Users online</div>
                <div id="boxContent">
                    <div id="user-online">
                        <ul id="list-user"></ul>
                    </div>
                </div>
            </div>

            <div id="right">

                <div id="listMessage">
                </div>

                    <div id="noti">
                    </div>

                <input type="text" id="txtMessage">
                <input type="button" id="btnSendMessage" value="SendMessage">
            </div>
        </div>
    </div>
</body>
<script src="/bundle.js"></script>
</html>